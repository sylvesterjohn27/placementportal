@model List<PlacementManagement.BAL.Models.StudentViewModel>

@{
    ViewData["Title"] = "Eligible Students";

}
<div class="card">
    <div class="card-header text-center">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <table class="table table-responsive table-bordered table-hover">
            <thead>
                <tr class="table-active">
                    <th>Student Name</th>
                    <th>E-Mail</th>                    
                    <th>Department</th>
                    <th>Core Areas</th>
                    <th>CGPA</th>                   
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.StudentName</td>
                            <td>@student.Email</td>                            
                            <td>@student.DepartmentName</td>
                            <td>@student.CoreAreas</td>
                            <td>@student.CGPA</td>
                        </tr>                        
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="">
                            <div>
                                No student available at this moment!
                            </div>
                        </td>
                    </tr>
                }                
            </tbody>
        </table>
        <div class="row justify-content-md-center">
            <div class="col col-lg-2">
                <a class="btn btn-outline-primary" asp-area="" asp-action="SaveApproval_Rejection" asp-route-id="1" asp-route-placementRequestId="@ViewBag.PlacementRequestId" onclick="return confirm('Are you sure to Approve Placement Request')">Approve</a>
            </div>           
            <div class="col col-lg-2">
                <a class="btn btn-outline-danger" asp-area="" asp-action="SaveApproval_Rejection" asp-route-id="0" asp-route-placementRequestId="@ViewBag.PlacementRequestId" onclick="return confirm('Are you sure to Reject Placement Request')">Reject</a>
            </div>
        </div>       
    </div>
</div>
