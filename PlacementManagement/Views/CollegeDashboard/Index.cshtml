@model PlacementManagement.BAL.Models.UserViewModel
@{
    ViewData["Title"] = "My Dashboard";

}

<div class="row g-0">
    <div class="col-lg-12">
        <div class="card-body p-md-5 mx-md-4">
            <div class="card">
                <h5 class="card-header">My Info</h5>
                <div class="card-body">                    
                     <table class="table table-responsive table-bordered table-hover">
                            <thead>
                                <tr class="table-active">
                                    <th>Name</th>
                                    <th>E-Mail</th>                                   
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Name</td>
                                    <td>@Model.UserName</td>
                                </tr>
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row g-0">
    <div class="col-lg-6">
        <div class="card-body p-md-5 mx-md-4">
            <div class="card">
                <h5 class="card-header">Student Information</h5>
                <div class="card-body">
                    <p class="card-text">Manage student(s) information here!</p>
                    <a class="btn btn-outline-danger" asp-area="" asp-controller="Student" asp-action="Index">My Students</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card-body p-md-5 mx-md-4">
            <div class="card">
                <h5 class="card-header">Placement Requests from Companies</h5>
                <div class="card-body">
                    <p class="card-text">Checkout list of placement request(s) submitted by the companies!</p>
                    <a class="btn btn-outline-danger" asp-area="" asp-controller="PlacementRequest" asp-action="Index">Company Placement Requests</a>
                </div>
            </div>
        </div>
    </div>
</div>
