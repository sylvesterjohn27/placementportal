@model PlacementManagement.BAL.Models.PlacementRequestViewModel

@{
    ViewData["Title"] = "Edit Placement Request";
}
<div class="card">
    <div class="card-header text-center">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <form method="post" action="Create" class="mt-3" autocomplete="off">
            <div class="mb-3">
                @Html.DisplayNameFor(model => model.Id)
                <input type="text" asp-for="Id" class="form-control" readonly />
            </div>
            <div class="mb-3">
                @Html.DisplayNameFor(model => model.PlacementDate)
                <input type="date" asp-for="PlacementDate" class="form-control" />
                <span asp-validation-for="PlacementDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                @Html.DisplayNameFor(model => model.CollegeName)
                @Html.DropDownListFor(model=>model.CollegeId,ViewBag.CollegeDetails as SelectList,"Select College",new { @class = "form-control"})
                <span asp-validation-for="CollegeName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                @Html.LabelFor(model => model.Departments)
                @Html.ListBoxFor(model => model.DepartmentIds,new MultiSelectList(Model.DepartmentDetails, "Value", "Text"), new { @class = "form-control", multiple = "multiple"})
            </div>
            <div class="mb-3">
                @Html.LabelFor(model => model.CoreAreas)
                @Html.ListBoxFor(model => model.CoreAreaIds,new MultiSelectList(Model.CoreAreaDetails, "Value", "Text"), new { @class = "form-control", multiple = "multiple"})
            </div>
            <div class="mb-3">
                @Html.DisplayNameFor(model => model.CGPA)
                <input type="text" asp-for="CGPA" class="form-control" />
                <span asp-validation-for="CGPA" class="text-danger"></span>
            </div>
            <div>
                <div>
                    <button type="submit" class="btn btn-success form-control"><i class="fa-solid fa-floppy-disk"></i> Update</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

