@model PlacementManagement.BAL.Models.InteviewProcessViewModel

@{
    ViewData["Title"] = "Edit Candidate";
}
<div class="card">
    <div class="card-header text-center">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <form method="post" action="Edit" class="mt-3" autocomplete="off">
            @Html.HiddenFor(model=>model.Id)
            @Html.HiddenFor(model=>model.CompanyId)
            @Html.HiddenFor(model=>model.CollegeId)
            @Html.HiddenFor(model=>model.StudentId)
            @Html.HiddenFor(model=>model.PlacementRequestId)
            <div class="card" style="margin:10px;">
                <div class="card-body">
                    <div class="mb-3">
                        @Html.DisplayNameFor(model => model.StudentName)  :
                        @Model.StudentName
                    </div>
                    <div class="mb-3">
                        @Html.DisplayNameFor(model => model.CollegeName)   :         
                        @Model.CollegeName
                    </div>
                </div>
            </div>
            <div class="row g-0">
                <div class="col-lg-6">         
                    <div class="card" style="margin:10px;">
                        <div class="card-body">
                            <div class="mb-3">
                                @Html.DisplayNameFor(model => model.RoundOneScore)
                                <input type="text" asp-for="RoundOneScore" class="form-control" />
                                <span asp-validation-for="RoundOneScore" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                @Html.DisplayNameFor(model => model.RoundOneRemarks)
                                @Html.TextAreaFor(m => m.RoundOneRemarks, new { @class = "form-control" })
                                <span asp-validation-for="RoundOneRemarks" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                @Html.DisplayNameFor(model => model.RoundOneCleared)
                                <input type="checkbox" asp-for="RoundOneCleared" class="form-check-input" />
                                <span asp-validation-for="RoundOneCleared" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card" style="margin:10px;">
                        <div class="card-body">
                            <div class="mb-3">
                                @Html.DisplayNameFor(model => model.RoundTwoScore)
                                <input type="text" asp-for="RoundTwoScore" class="form-control" />
                                <span asp-validation-for="RoundTwoScore" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                @Html.DisplayNameFor(model => model.RoundTwoRemarks)
                                @Html.TextAreaFor(m => m.RoundTwoRemarks, new { @class = "form-control" })
                                <span asp-validation-for="RoundTwoRemarks" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                @Html.DisplayNameFor(model => model.RoundTwoCleared)
                                <input type="checkbox" asp-for="RoundTwoCleared" class="form-check-input" />
                                <span asp-validation-for="RoundTwoCleared" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card" style="margin:10px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <input type="checkbox" asp-for="IsSelected" class="form-check-input" />
                            @Html.DisplayNameFor(model => model.IsSelected)                           
                            <span asp-validation-for="IsSelected" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <input type="checkbox" asp-for="IsOfferReleased" class="form-check-input" />
                            @Html.DisplayNameFor(model => model.IsOfferReleased)                           
                            <span asp-validation-for="IsOfferReleased" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <input type="checkbox" asp-for="IsOfferAccepted" class="form-check-input" />
                            @Html.DisplayNameFor(model => model.IsOfferAccepted)                            
                            <span asp-validation-for="IsOfferAccepted" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            @Html.DisplayNameFor(model => model.OfferReleasedDate)
                            <input type="date" asp-for="OfferReleasedDate" class="form-control" />
                            <span asp-validation-for="OfferReleasedDate" class="text-danger"></span>
                        </div>
                    </div>  
                </div>
            </div>
            
            <div>
                <div>
                    <button type="submit" class="btn btn-success form-control"><i class="fa-solid fa-floppy-disk"></i> Update</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

